<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="163dp"
    android:layout_height="163dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:background="@drawable/card_backgorund"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:stateListAnimator="@animator/item_state_selector">

    <ImageView
        android:id="@+id/genre_imageview"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:src="@drawable/genre_icon" />

    <ImageView
        android:id="@+id/imageView_image"
        android:layout_width="113dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:scaleType="centerCrop"
        android:src="@drawable/details_placeholder_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="72dp"
        android:layout_height="12dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="33dp"
        android:background="#000"
        tools:text="Action"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/genre_check_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:src="@drawable/checked" />


</FrameLayout>